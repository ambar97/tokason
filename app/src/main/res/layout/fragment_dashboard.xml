<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.DashboardFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background23">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="TOKASON"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="TOKO CONTONG"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="3dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/btnWallet"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/relav2">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tanggal Jatuh Tempo :"
                                        android:textSize="15sp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="15dp"/>
                                    <TextView
                                        android:id="@+id/saldo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:gravity="right"
                                        android:layout_marginRight="10dp"
                                        android:layout_alignParentRight="true"
                                        android:text="15 February 2020"
                                        android:textSize="15sp" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_below="@id/saldo"
                                        android:layout_marginTop="5dp"
                                        android:background="?android:attr/listDivider" />
                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_below="@id/relav2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <RelativeLayout
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:id="@+id/btndompet"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/ic_biaya"
                                            android:layout_centerInParent="true"
                                            android:paddingBottom="10dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Dompet"
                                            android:textSize="12sp"
                                            android:layout_below="@id/btndompet"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"/>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:id="@+id/btnout"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/ic_laporan_bulanan"
                                            android:layout_centerInParent="true"
                                            android:paddingBottom="10dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Pay Out"
                                            android:textSize="12sp"
                                            android:layout_below="@id/btnout"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"/>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:id="@+id/btnProfile"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:id="@+id/btnacount"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/ic_profile"
                                            android:layout_centerInParent="true"
                                            android:paddingBottom="10dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Acount"
                                            android:textSize="12sp"
                                            android:layout_below="@id/btnacount"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"/>
                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="Toko Kasir Online"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Nikmati Service Kami"/>
                    </LinearLayout>

                    <LinearLayout
