                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                                <!--android:textStyle="bold" />-->

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardhomelaplabarugi"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/ukuran_height_cardview_home"
