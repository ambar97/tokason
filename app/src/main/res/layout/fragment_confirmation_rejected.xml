<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ConfirmationRejectedFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/info_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/pembayaran_ditolak" />

            <TextView
                android:id="@+id/txt_bukti"
                android:layout_width="4dp"
                android:layout_height="78dp"
                android:layout_marginEnd="411dp"
                android:layout_marginRight="411dp"
                android:layout_marginBottom="731dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:visibility="gone"
                />

            <ImageView

                android:id="@+id/img_bukti"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                tools:src="@drawable/default_foto_user" />

            <Button
                android:id="@+id/pilih_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="PILIH FOTO"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPLOAD"
                android:layout_margin="10dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>